{
  "name": "linter-flint",
  "main": "./lib/linter-flint.js",
  "version": "1.0.1",
  "description": "Lint projects using flint",
  "repository": "https://github.com/AtomLinter/linter-flint",
  "license": "MIT",
  "engines": {
    "atom": ">=1.4.0 <2.0.0"
  },
  "configSchema": {
    "executablePath": {
      "type": "string",
      "default": "flint"
    },
    "skipReadme": {
      "type": "boolean",
      "default": false
    },
    "skipContributing": {
      "type": "boolean",
      "default": false
    },
    "skipLicense": {
      "type": "boolean",
      "default": false
    },
    "skipBootstrap": {
      "type": "boolean",
      "default": false
    },
    "skipTestScript": {
      "type": "boolean",
      "default": false
    },
    "skipScripts": {
      "type": "boolean",
      "default": false
    }
  },
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  },
  "dependencies": {
    "atom-linter": "^10.0.0",
    "atom-package-deps": "^4.0.1",
    "escape-html": "^1.0.3"
  },
  "devDependencies": {
    "eslint": "^4.13.1",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-plugin-import": "^2.7.0",
    "jasmine-fix": "^1.3.0"
  },
  "scripts": {
    "lint": "eslint .",
    "test": "apm test"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "global-require": "off",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "globals": {
      "atom": true
    },
    "env": {
      "node": true
    }
  },
  "package-deps": [
    "linter"
  ]
}
